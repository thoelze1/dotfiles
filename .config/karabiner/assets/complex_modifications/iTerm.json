{
    "title": "Fn keys are standard function keys in iTerm",
    "rules": [
        {
            "description": "Fn keys are standard function keys without <fn>, with <fn> they do what keycap says",
            "manipulators": [
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "f3",
                        "modifiers": {
                            "optional": [
                                "command",
                                "control",
                                "option",
                                "shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f3",
                            "modifiers": [
                                "fn"
                            ]
                        }
                    ],
                    "type": "basic"
                },
                {
                    "conditions": [
                        {
                            "bundle_identifiers": [
                                "^com\\.googlecode\\.iterm2$"
                            ],
                            "type": "frontmost_application_if"
                        }
                    ],
                    "from": {
                        "key_code": "f3",
                        "modifiers": {
                            "mandatory": [
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "f3"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
